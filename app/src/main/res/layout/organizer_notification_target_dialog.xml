<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:id="@+id/notificationTargetMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Who do you want to send notifications to?"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginBottom="24dp" />

    <Button
        android:id="@+id/waitlistNotificationButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Send to Waiting List Entrants"
        android:layout_marginBottom="12dp" />

    <Button
        android:id="@+id/invitedNotificationButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Send to Invited Entrants"
        android:layout_marginBottom="12dp" />

    <Button
        android:id="@+id/cancelledNotificationButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Send to Cancelled Entrants" />

</LinearLayout>